<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dapeng.notes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="EasyNotes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Study.Study"
            android:label="@string/学习笔记"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Words.Words"
            android:label="@string/单词本"
            android:theme="@style/WordsTheme" />
        <activity
            android:name=".Words.WordsAdd"
            android:label="@string/添加单词记录"
            android:theme="@style/WordsTheme" />
        <activity
            android:name=".Words.WordsEdit"
            android:label="@string/详情"
            android:theme="@style/WordsTheme" />
        <activity
            android:name=".Words.WordsTranslate"
            android:label="@string/翻译"
            android:theme="@style/WordsTheme" />
        <activity
            android:name=".Money.Money"
            android:label="@string/记账本"
            android:theme="@style/MoneyTheme" />
        <activity
            android:name=".Todo.Todo"
            android:label="@string/待办事项"
            android:theme="@style/TodoTheme" />
        <activity android:name=".Todo.Done"
            android:label="@string/已完成"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Study.AddStudy"
            android:label="@string/添加"/>
        <activity android:name=".Study.EditStudy"
            android:label="@string/编辑"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>